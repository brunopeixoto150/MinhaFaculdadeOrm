    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="325dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etNomeEdiDis"
            android:editable="false"
            android:hint="@string/nome"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:enabled="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etProfessorEdiDis"
            android:hint="@string/professor"
            android:layout_below="@+id/etNomeEdiDis"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="43dp"
            android:layout_alignRight="@+id/etPeriodoEdiDis"
            android:layout_alignEnd="@+id/etPeriodoEdiDis" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etEmentaEdiDis"
            android:layout_below="@+id/etProfessorEdiDis"
            android:hint="@string/ementa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etPeriodoEdiDis"
            android:editable="false"
            android:hint="@string/semestre"


            android:enabled="false"
            android:layout_below="@+id/etNomeEdiDis"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etProva1EdiDis"
            android:hint="@string/prova_1"
            android:layout_toStartOf="@+id/etProva2DataEdiDis"
            android:layout_below="@+id/etEmentaEdiDis"
            android:layout_toLeftOf="@+id/etProva2DataEdiDis" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etProva2EdiDis"
            android:hint="@string/prova_2"
            android:layout_below="@+id/etProva1EdiDis"
            android:layout_alignRight="@+id/etProva1EdiDis"
            android:layout_alignEnd="@+id/etProva1EdiDis" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/etProva2DataEdiDis"
            android:hint="@string/data"
            android:digits="1234567890/"
            android:layout_below="@+id/etProva1EdiDis"
            android:layout_alignLeft="@+id/etProva1DataEdiDis"
            android:layout_alignStart="@+id/etProva1DataEdiDis"
            android:layout_toStartOf="@+id/btnDataProva1EdiDis"
            android:enabled="false"
            android:focusable="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/etProva1DataEdiDis"
            android:hint="@string/data"
            android:digits="1234567890/"
            android:enabled="false"
            android:layout_below="@+id/etEmentaEdiDis"
            android:layout_toLeftOf="@+id/btnDataProva1EdiDis"
            android:layout_alignLeft="@+id/btnVoltarEdiDis"
            android:layout_alignStart="@+id/btnVoltarEdiDis" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btnDataProva1EdiDis"
            android:layout_alignRight="@+id/btnDataProva2EdiDis"
            android:layout_alignEnd="@+id/btnDataProva2EdiDis"
            android:layout_below="@+id/etEmentaEdiDis"
            android:layout_above="@+id/btnDataProva2EdiDis" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btnDataProva2EdiDis"
            android:layout_alignTop="@+id/etProva2DataEdiDis"
            android:layout_alignRight="@+id/etPeriodoEdiDis"
            android:layout_alignEnd="@+id/etPeriodoEdiDis"
            android:layout_alignBottom="@+id/etProva2DataEdiDis" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salvar"
            android:id="@+id/btnSalvarEdiDis"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="250dp"  />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voltar"
            android:id="@+id/btnVoltarEdiDis"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="250dp"
            android:layout_marginStart="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etAnoEdiDis"
            android:editable="false"
            android:hint="@string/ano"
            android:enabled="false"
            android:layout_below="@+id/etNomeEdiDis"
            android:layout_toLeftOf="@+id/etPeriodoEdiDis"
            android:layout_toStartOf="@+id/etPeriodoEdiDis" />

    </RelativeLayout>
</LinearLayout>
