<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Disciplina"
            android:id="@+id/tvNomeDisLembrete"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Data"
            android:id="@+id/tvDataProvaLembrete"
            android:layout_alignTop="@+id/tvNomeDisLembrete"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Professor"
            android:id="@+id/tvProfessorLembrete"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/tvDataProvaLembrete"
            android:layout_toRightOf="@+id/tvDataProvaLembrete"
            android:layout_toEndOf="@+id/tvDataProvaLembrete" />
    </RelativeLayout>
</LinearLayout>
